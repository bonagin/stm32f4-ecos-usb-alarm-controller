#ifndef SESS_PERFOMER_H_
#define SESS_PERFOMER_H_

#include <cyg/kernel/kapi.h>
#include <kses_term.h>
#include <session.h>
#include <debug.h>
#include <time.h>

#include "definitions.h"

class cTestjig : public cSessionPerformer, public cDebug
{
	static cTestjig * __instance;
	cTestjig();

public:
	static void init();
	static cTestjig * get(){ return __instance; };
	virtual ~cTestjig();

	cyg_bool run();
	cyg_bool performSession(cSession * session);
	void set_serial(cyg_uint32 serial);
	cyg_uint32 get_serial();
	static void debug(cTerm & t,int argc,char *argv[]);

};



#endif /* SESS_PERFOMER_H_ */
